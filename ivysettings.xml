<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>

	<include url="/etc/ivy/ivysettings.xml"/>

	<property name="ivy.distrib.dir" value="${target.artifacts}" override="true"/>
	<property name="ivy.deliver.ivy.pattern"
		value="${ivy.distrib.dir}/[type]s/[artifact]-[revision](-[classifier]).[ext]"
		override="true"
		/>

	<credentials
		host="maven.pkg.github.com"
		realm="GitHub Package Registry"
		username="${project.developer.id}"
		passwd="${env.GITHUB_TOKEN}"
		/>

	<caches
		defaultTTL="eternal"
		/>

	<resolvers>
		<chain name="main">
			<ibiblio name="public" m2compatible="true"/>
			<ibiblio
				name="github-packages"
				m2compatible="true"
				root="https://maven.pkg.github.com/${project.developer.id}/*"
				/>
		</chain>
		<ibiblio
			name="github-packages-${project.name}"
			m2compatible="true"
			root="https://maven.pkg.github.com/${project.developer.id}/${project.name}"
			/>
	</resolvers>

	<!--settings defaultResolver="main"/-->

</ivysettings>
